#!/bin/bash

# Check if .env file exists
if [ ! -f .env ]; then
    echo "Error: .env file not found!"
    exit 1
fi

# Load environment variables from .env
source .env

# Check if a SQL file was provided
if [ -z "$1" ]; then
    echo "Usage: ./runsql <sql-file>"
    echo "Example: ./runsql sql_setup.sql"
    exit 1
fi

# Run sqlcmd with the credentials from .env
sqlcmd -S $SERVER_NAME -U $ADMIN_USER -P $ADMIN_PASSWORD -d $DB_NAME -i "$1"
